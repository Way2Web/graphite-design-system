{
  "name": "@w2wds/vue",
  "sideEffects": false,
  "version": "0.6.0",
  "description": "Vue specific wrapper for the components of the Way2Web Design System",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Way2Web/way2web-design-system.git"
  },
  "scripts": {
    "lint": "echo add linter",
    "test": "echo 'vue no tests yet'",
    "build": "npm run clean && npm run compile && npm run bundle && npm run build.vetur",
    "bundle": "rollup --config rollup.config.js",
    "clean": "rimraf dist dist-transpiled",
    "compile": "npm run tsc",
    "tsc": "tsc -p .",
    "build.vetur": "node ./scripts/build-vetur.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist/"
  ],
  "devDependencies": {
    "@vue/test-utils": "^2.0.0-rc.6",
    "change-case": "^4.1.2",
    "fs-extra": "^10.0.0",
    "rimraf": "^2.6.3",
    "rollup": "^2.51.1",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.3.2",
    "vue": "3.0.0"
  },
  "dependencies": {
    "@w2wds/core": "^0.7.0"
  },
  "jest": {
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.ts"
    ],
    "testPathIgnorePatterns": [
      "node_modules",
      "dist",
      "dist-transpiled"
    ]
  },
  "vetur": {
    "tags": "dist/vetur/tags.json",
    "attributes": "dist/vetur/attributes.json"
  }
}
